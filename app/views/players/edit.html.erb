<div class="container">
  <h1 class='roboto'>Edit Player</h1>
  <%= simple_form_for @player do |f| %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :phone_number %>
    <%= f.input :password %>
    <%= f.submit "apply changes", class: "btn btn-primary" %>
  <% end %>
</div>
